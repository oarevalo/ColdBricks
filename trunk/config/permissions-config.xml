<?xml version="1.0" encoding="ISO-8859-1"?>
<permissions-config default="allow">
	<!-- open to anyone -->
	<resource id="ehGeneral.dspLogin" roles="" />
	<resource id="ehGeneral.doLogin" roles="" />
	<resource id="ehGeneral.dspRegister" roles="" />
	<resource id="ehGeneral.doRegister" roles="" />
	
	<!-- allowed to general users -->
	<resource id="ehGeneral.*" roles="user" />
	<resource id="ehSite.*" roles="user" />
	<resource id="ehAccounts.*" roles="user" />
	<resource id="ehPage.*" roles="user" />
	<resource id="ehResources.*" roles="user" />
	<resource id="ehSiteConfig.*" roles="user" />
	<resource id="ehSiteMap.*" roles="user" />
	<resource id="ehSites.dspMain" roles="user" />
	<resource id="ehSites.doArchiveSite" roles="user" />

	<!-- allowed only to admin users -->
	<resource id="ehSites.*" roles="admin" />
	<resource id="ehSettings.*" roles="admin" />
	<resource id="ehUsers.*" roles="admin" />
	<resource id="ehSetup.*" roles="admin" />
	
	<resource id="test.*.*" roles="admin" />
	
</permissions-config>